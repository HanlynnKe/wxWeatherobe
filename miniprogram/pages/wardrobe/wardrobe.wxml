<view class="container" style="background: url({{bgImgUrl}}); height:100%">
  <view class="weui-panel weui-panel_access" style='margin-top: 200rpx;'>
    <view class="weui-panel__hd">你的衣橱</view>
    <view class="weui-panel__bd" style='margin-top: 20rpx;'>
      <view class="weui-flex">
          <view class="weui-flex__item">
              <view class="flex-content-center">
                <view class="num-content">
                  <text class="user-num">{{images.length}}</text>
                </view>
              </view>
          </view>
          <!-- <view class="weui-flex__item">
            <view class="upload-btn">
              <button class="weui-btn" bindtap="uploadImage" 
              type="default" style="color: #82ccdd">上传</button>
            </view>
            <view class="delete-btn">
              <button class="weui-btn" type="default" style="color: #82ccdd">删除</button>
            </view>
          </view>   -->
      </view>
    </view>
  </view>
  <view class="showImg">
    <view class="weui-cells">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <!-- <view class="weui-uploader__hd">
                            <view class="weui-uploader__title" style="color:#ffffff">图片上传</view>
                            <view class="weui-uploader__info">{{images.length}}/2</view>
                        </view> -->
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <block wx:for="{{images}}" wx:key="*this">
                                    <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                                        <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                    </view>
                                </block>
                                <view class="weui-uploader__file">
                                    <image class="weui-uploader__img" src="../../images/bg.jpg" mode="aspectFill" />
                                </view>
                                <!-- <view class="weui-uploader__file weui-uploader__file_status">
                                    <image class="weui-uploader__img" src="../../images/bg.jpg" mode="aspectFill" />
                                    <view class="weui-uploader__file-content">
                                        <icon type="warn" size="23" color="#F43530"></icon>
                                    </view>
                                </view>
                                <view class="weui-uploader__file weui-uploader__file_status">
                                    <image class="weui-uploader__img" src="../../images/bg.jpg" mode="aspectFill" />
                                    <view class="weui-uploader__file-content">50%</view>
                                </view> -->
                            </view>
                            <view class="weui-uploader__input-box">
                                <view class="weui-uploader__input" bindtap="chooseImage"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
  </view>
  <view class="image-go">
    <view class="marquee-box">
      <view class="marquee-text" style="{{orientation}}:{{marqueeDistance}}px;font-size: {{size}}px;">
        <image src="{{adUrl}}" class='ad-image' />{{text}}
      </view>
  </view>
 </view>
</view>