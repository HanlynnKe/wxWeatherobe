<view class="container" style="background: url({{bgImgUrl}}); height:100%">
  <view class="weui-panel weui-panel_access" style='margin-top: 200rpx;'>
    <view class="weui-panel__hd">个人信息</view>
    <view class="weui-panel__bd" style='margin-top: 20rpx;'>
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <view class="userinfo" wx:else>
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
      <view class="usermotto">
        <view class='usermotto-context'>{{responce}}</view>
      </view>
    </view>
  </view>
</view>